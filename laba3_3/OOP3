import sys

class Formula:  # Решение формулы
    def formula(self, x):
        if x == 0:
            return Error/onnole
        return 1 / (x * 3)

if __name__ == '__main__':
class ComLine:  # Считывание аргумента командной строки
        def __init__(self):
            self.__comStr__ = sys.argv[1]
            self.__comStr__ = self.__comStr__.split('--poly=')
            self.__comStr__ = self.__comStr__[1].split(',')
            
from modules.formula import Formula
from modules.comLine import ComLine

class App:
    def __init__(self):
        self.summ = 0
        self.comLine = ComLine()
        self.formula = Formula()

    def showRes(self):
        print(self.comLine.__comStr__)
        print(self.summ)

    def run(self):
        for elem in self.comLine.__comStr__:
            self.summ += self.formula.calculation(float(elem))
        self.showRes()
